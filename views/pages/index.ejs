<!DOCTYPE html>
<html lang="en"></html>
  <head>
    <%- include('../layout/head') %>
  </head>
  <body>  
    <header>
      <div class="header_title">
        <h1>Book App</h1>
      </div>
      <div class="page">
        <h2><%=count%> Saved Books</h2>
      </div>  
    </header>

    <main>
    <% data.forEach(book => { %>
    <section>
      <div class="img">
        <img src=" <%= book.image_url %> " />
      </div>
      <h3><%= book.title %></h3>
      <h4><%= book.author %></h4>
      <button class="details_button"><a href="/bookDetail/<%=book.id%>">View Details</a></button>
    </section>
    <% }) %>
    </main>

    <footer></footer>
  </body>
</html>


