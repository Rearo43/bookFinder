<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../layout/head') %>
  </head>
  <body>
    <header>
      <div class="header_title">
        <h1>Book App</h1>
      </div>

      <div class="page">
        <h1>Search Results</h1>
      </div>
    </header>

    <% data.forEach(book => { %>
    <section>
      <div class="img">
        <img src=" <%= book.image_url %> " />
      </div>
      <h2><%= book.title %></h2>
      <h3><%= book.author %></h3>
      <p><%= book.description %></p>
      <button>Select this Book</button>
    </section>
    <% }) %>
  </body>
  <footer></footer>
</html>
